{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 150,
  "title": "Population Distribution in six continents",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Jiajun-liu902/Data-Visualization-Two/main/pie_chart.csv"
  },
  "transform": [
    {
      "calculate": "datum.Total/1000",
      "as": "count"
    },
    {
      "calculate": "(datum.Total/37223779712)",
      "as": "percentage_total"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc"
      
      },
      "encoding": {
        "theta": {
          "field": "count",
          "type": "quantitative",
          "title": "Population",
          "stack": true
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "scheme": "tableau10"
          }
          
        },
        "tooltip": [
          {
            "field": "Continent",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Population",
            "format": ".2f"
          },
          {
            "field": "percentage_total",
            "type": "quantitative",
            "title": "Population Percentage",
     
            "format": ".2f"
          }
        ]
      }
    }
   


  ]

}