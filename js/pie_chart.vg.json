{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height": 150,
  "title": "Population Distribution in six continents",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Jiajun-liu902/Data-Visualization-Two/main/line_chart(1).csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [
          2000,
          2010,
          2015,
          2020,
          2022
        ],
        "labels": [
          "2000",
          "2010",
          "2015",
          "2020",
          "2022"
        ],
        "name": "Year: "
      }
    }
  ],


  "transform": [
    {
      "filter": "Year_selection == null || datum.Year == Year_selection"
    } ,
    {
      "calculate": "datum.Population",
      "as": "count"
    },
    {
      "calculate": "(datum.Population/37223779712)",
      "as": "percentage_total"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc"
      
      },
      "encoding": {
        "theta": {
          "field": "count",
          "type": "quantitative",
          "title": "Population",
          "stack": true
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "scheme": "tableau10"
          }
          
        },
        "tooltip": [
          {
            "field": "Continent",
            "type": "nominal",
            "title": "Continent"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Population"
          }

        ]
      }
    }
   


  ]

}