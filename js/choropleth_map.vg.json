{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 400,
    "title": "Population Density by Country all over the world",
    "config": {
        "view": {
            "stroke": "transparent"
        }
    },
    "data": {
        "url": "https://raw.githubusercontent.com/Jiajun-liu902/homework-week10/main/world_population_tidy_map.csv"
    },
    "params": [
        {
            "name": "Year_selection",
            "value":2022,
            "bind": {
                "input": "select",
                "options": [
                    2000,
                    2010,
                    2015,
                    2020,
                    2022
                ],
                "labels": [
                    "2000",
                    "2010",
                    "2015",
                    "2020",
                    "2022"
                ],
                "name": "Year: "
            }
        }
    ],

    "projection": {
        "type": "equirectangular", 
        "scale": 130, 
        "translate": [500, 240] 
      },



    "transform": [
        {
            "filter": "Year_selection == null || datum.Year == Year_selection"
        },
        {
            "lookup": "Country",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Jiajun-liu902/homework-week10/main/topo.json",
                    "format": {
                        "type": "topojson",
                        "feature": "ne_110m_admin_0_countries"
                    }
                },
                "key": "properties.NAME"
            },
            "as": "geo"
        }

    ],
    

    "layer": [
        {
          "data": {
            "values": [
              {"type": "Sphere", "r": 5000}
            ]
          },
          "mark": {"type": "geoshape", "fill": "skyblue", "stroke": "transparent"}
          
        },
    
{


    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "shape": {
            "field": "geo",
            "type": "geojson"
        },
        "color": {
            "field": "Population Density",
            "type": "quantitative",
            "legend": {"orient": "right"},
            "bin": {"maxbins": 5, "extent": [0, 1000]} 
        },
        "tooltip": [
            {
                "field": "Year",
                "type": "quantitative"
            },
            {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Population Density",
                "type": "quantitative"
            }
        ]
    }
}
    ]

}



