{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 300,
  "height": 150,
  "title": "Population in six continents",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Jiajun-liu902/Data-Visualization-Two/main/line_chart(1).csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "select",
        "options": [
          2000,
          2010,
          2015,
          2020,
          2022
        ],
        "labels": [
          "2000",
          "2010",
          "2015",
          "2020",
          "2022"
        ],
        "name": "Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Year_selection == null || datum.Year == Year_selection"
    } 
  ],
  "encoding": {
    "y": {
      "field": "Continent",
      "type": "nominal",
      "axis": {
        "grid": false
      }
    },
    "x": {
      "field": "Population",
      "type": "quantitative",
      "axis": {
        "grid": false
      }
    },
    "tooltip": [
        {
            "field": "Continent",
            "type": "nominal",
            "title": "Continent"
        },
        {
            "field": "Population",
            "type": "quantitative",            
            "title": "Population"
        }   
            ]
  },
  "layer": [
    {
      "mark": "bar"
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "text": {
          "field": "Population",
          "type": "quantitative"
        }
      }
    }
  ]
}